# Core network configuration
CHAIN_ID=42161

# Primary provider (Alchemy)
ALCHEMY_HTTP_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
ALCHEMY_WS_URL=wss://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
ALCHEMY_DAILY_LIMIT=1000000
ALCHEMY_MONTHLY_LIMIT=30000000

# Secondary providers
QUICKNODE_HTTP_URL=https://YOUR-QUICKNODE-ENDPOINT
QUICKNODE_WS_URL=wss://YOUR-QUICKNODE-ENDPOINT
QUICKNODE_DAILY_LIMIT=500000
QUICKNODE_MONTHLY_LIMIT=15000000

LLAMA_HTTP_URL=https://YOUR-LLAMA-ENDPOINT
LLAMA_WS_URL=wss://YOUR-LLAMA-ENDPOINT
LLAMA_DAILY_LIMIT=300000
LLAMA_MONTHLY_LIMIT=9000000

INFURA_HTTP_URL=https://arbitrum-mainnet.infura.io/v3/YOUR_KEY
INFURA_WS_URL=wss://arbitrum-mainnet.infura.io/ws/v3/YOUR_KEY
INFURA_DAILY_LIMIT=100000
INFURA_MONTHLY_LIMIT=3000000

# Global CU controls
DAILY_CU_LIMIT=1000000
MONTHLY_CU_LIMIT=30000000
CU_ALERT_THRESHOLD=80
CU_EMERGENCY_THRESHOLD=95
EMERGENCY_DAILY_THRESHOLD=90
EMERGENCY_MONTHLY_THRESHOLD=90
EMERGENCY_PROVIDER_COUNT=2

# Provider strategy
PROVIDER_STRATEGY=capacity_based
CAP_ALCHEMY=1.0
CAP_QUICKNODE=0.8
CAP_LLAMA=0.8
CAP_INFURA=0.05
ENABLE_AGGRESSIVE_CACHING=false
CACHE_TTL_SECONDS=30
CACHE_MAX_SIZE=1000

# Emergency response tuning
CU_STATUS_INTERVAL=30
CU_MONITOR_INTERVAL=30
PROVIDER_FAILURE_THRESHOLD=3
PROVIDER_OFFLINE_COOLDOWN_MS=45000

# RPC retry configuration
RPC_RETRIES=3
RPC_BACKOFF_BASE_MS=120
RPC_BACKOFF_MAX_MS=1200
RPC_BACKOFF_JITTER=0.25

# Searcher specific keys
PRIVATE_KEY=0xYOUR_PRIVATE_KEY
ARB_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_KEY
ARB_WS_URL=wss://arb-mainnet.g.alchemy.com/v2/YOUR_KEY

# Application behaviour
WORKING_MODE=false
SLIPPAGE_BPS=30
PROBE_NOTIONAL_A=0.02
